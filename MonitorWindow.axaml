<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PW_Lab2.MonitorWindow"
        Title="Wybierz monitory"
        Width="640"
        Height="360">
    <StackPanel Margin="15" Spacing="10">
        <ListBox x:Name="MonitorList" SelectionMode="Multiple">
            <ListBoxItem Content="Dell 24 - 600 zł" />
            <ListBoxItem Content="LG 27 - 800 zł" />
            <ListBoxItem Content="Samsung 32 - 1000 zł" />
        </ListBox>
        <TextBlock Text="Cena:" />
        <TextBox x:Name="MonitorPrice" IsReadOnly="True" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
            <Button Content="OK" Width="80" Click="OkClicked" />
            <Button Content="Anuluj" Width="80" Click="CancelClicked" />
        </StackPanel>
    </StackPanel>
</Window>
